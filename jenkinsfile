pipeline {
    agent any

    environment {
        GIT_BRANCH = sh(script: 'git rev-parse --abbrev-ref HEAD', returnStdout: true).trim()
    }

    stages {
        stage('Build and Deploy') {
            steps {
                script {
                    def dockerUsername = 'bharathsrinivasan'
                    def dockerPassword = credentials('DOCKERHUB_CREDENTIALS')

                    if (env.GIT_BRANCH == 'dev' || env.GIT_BRANCH == 'main') {
                        withCredentials([usernamePassword(credentialsId: dockerPassword, usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                            sh '''
                                chmod +x deploy.sh
                                ./deploy.sh
                            '''
                        }
                    } else {
                        echo 'Deployment is failure'
                    }
                }
            }
        }
    }
}
